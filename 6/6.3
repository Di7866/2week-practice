<html>
    <head>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 20px;
            }

            nav {
                text-align: right;
                padding-bottom: 35px;
                background-image: linear-gradient(lightblue, white);
                margin:  -20px;
                display: flex;
                justify-content: flex-end;

            }

            nav a {
                color: purple;
                margin: 20px;
                text-decoration: none;
            }

            h1 {
                font-size: 50px;
                text-align: center;
                margin-bottom: 25px;
            }

            .container {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .text {
                width: 300px;
            }

            .text p {
                color: lightblue;
                font-size: 35px;
            }

            .text i {
                display: block;
                text-align: right;
            }
            .text em {
                display: block;
                text-align: right;
            }

            .text p:hover {
                font-size: 45px;
                color: navy;
            }

            .text .right:hover {
                color: darkorange;
            }

            .picture {
                display: flex;
                flex-wrap: wrap;
                gap: 0px;
                width: 500px;
            }

            .picture img {
                width: 166.66px;
                height: 250px;
                object-fit: cover;
            }
            .image {
                width: 166.66px;
                height: 250px;
                position: relative;
                overflow: visible;
            }

            .image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                position: absolute;
                top: 0;
                left: 0;
                z-index: 1;
                opacity: 0.5;
                transition: all 0.5s ease-out;
                box-sizing: border-box;
                transform-origin: left top;
            }

            .image:hover img {
                opacity: 1;
                padding: 5px;
                border: 6px solid navy;
                z-index: 10;
                background: white;
                transform: scale(1.1);
                margin: 0;
            }
        </style>
    </head>
    <body>
